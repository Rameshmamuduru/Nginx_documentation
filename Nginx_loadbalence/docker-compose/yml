version: "3.9"

services:
  nginx:
    image: nginx:latest
    container_name: nginx_server
    labels:
      app: "backend"
      service: "nginx_flask"

    ports:
      - 80:80

    volumes:
      - ./nginx/nginx.conf:/etc/nginx/nginx.conf

    depends_on:
      - app1
      - app2
      - app3
    

  app1:
    build:
      context: ./app
      dockerfile: dockerfile
    container_name: app1
    labels:
      app: "backend"
      service: "flask_app1"

  app2:
    build:
      context: ./app
      dockerfile: dockerfile
    container_name: app2
    labels:
      app: "backend"
      service: "flask_app2"

  app3:
    build:
      context: ./app
      dockerfile: dockerfile
    container_name: app3
    labels:
      app: "backend"
      service: "flask_app3"
  

